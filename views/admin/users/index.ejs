<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
  <hr>
  <h2>Usuários</h2>
  <a href="/admin/users/create" class="btn btn-success">Criar Novo Usuário</a>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include ('../../partials/footer.ejs') %>
<script>
  function confirmarExclusao(event, form) {
    event.preventDefault()
    var decision = confirm("Tem certeza de que quer deletar esta categoria?")
    if (decision) {
      form.submit()
    }
  }
</script>